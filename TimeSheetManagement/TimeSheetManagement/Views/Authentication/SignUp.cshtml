
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthenticationLayout.cshtml";
}

<div class="container-xxl">
    <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner">
            <div class="card">
                <div class="card-body">
                    <div class="app-brand justify-content-center">
                        <img src="~/Contents/TSM-logo.svg" />
                    
                    </div>



                    @if (ViewBag.Response != null)
                    {
                        <strong>Error ! - </strong> @ViewBag.Response
                        <hr />
                    }

                <form id="formAuthentication" class="mb-3" method="POST" action="/Authentication/SignUp/">

                    <div class="mb-3 card-title">

                        <h3 style="color:#1f2829;">Sign Up Page </h3>


                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Username</label>
                        <input type="text"
                               class="form-control"
                               id="mail"
                               name="username"
                               placeholder="Username...."
                               autofocus required />
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="text"
                               class="form-control"
                               id="mail"
                               name="mail"
                               placeholder="Email...."
                               autofocus required />
                    </div>
                    <div class="mb-3 form-password-toggle">
                        <div class="d-flex justify-content-between">
                            <label class="form-label" for="password">Password</label>

                        </div>
                        <div class="input-group input-group-merge">
                            <input type="password"
                                   id="password"
                                   class="form-control"
                                   name="password"
                                   placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                                   aria-describedby="password" required />
                            <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <button class="btn btn-primary d-grid w-100" style="background-color: #1f2829; border-color: #1f2829;" type="submit">Create Account</button>
                    </div>

                    <div class="text-center">
                        <a style="color: #1f2829; font-weight: bold;">Already have account ?</a>
                    </div>


                </form>
                    <a asp-action="Login" asp-controller="Authentication" class="btn btn-primary d-grid w-100 text-white" style="background-color: #1f2829; border-color: #1f2829; ">Login</a>

                </div>
            </div>

        </div>
    </div>
</div>

